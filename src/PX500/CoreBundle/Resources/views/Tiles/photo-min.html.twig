{# 500px card style #}
<div class="photo-card">
    <div class="photo">
        <a href="{{ path('photo', {'uid':photo.uid }) }}">
            <img src="{{ photo.url }}" height="280px" width="280px" />
            <div class="detail">
                <div class="title">{{ photo.name }}</div>
                <div class="info">{{ photo.views }} / {{ photo.likes }} / {{ photo.favs }}</div>
                <div class="rating">{{ photo.rating }}</div>
            </div>
        </a>
    </div>
</div>

